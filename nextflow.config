singularity {
  enabled = true
  runOptions = "-B /mnt:/mnt"
}

params {
  executor = "slurm"
  clusterOptions = "-A u2022022 -t 48:00:00"
  fastqc_version = "0.11.9"
  trimmomatic_version = "0.39"
  stacks_version = "2.55"
  multiqc_version = "1.10"

  trimmomatic_cpus = 4
  trimmomatic_adapters = "$baseDir/data/adapters/TruSeq3-PE.fa"
  trimmomatic_trimmers = [
    "HEADCROP:5", "ILLUMINACLIP:${  trimmomatic_adapters}:2:30:10",
    "LEADING:3", "TRAILING:3",
    "MINLEN:140", "CROP:140"
  ]

  process_radtags_params = [
    "-i gzfastq", "--quality", "--disable-rad-check", "-e ecoRI"
  ]

  ustacks_cpus = 4
  ustacks_params = [""]

  cstacks_cpus = 8
  cstacks_popmap = "$baseDir/data/popmap.tsv"
  cstacks_params = ["-n 2"]

  sstacks_cpus = 8
  sstacks_params = [""]

  tsv2bam_cpus = 8
  tsv2bam_params = [""]

  gstacks_cpus = 8
  gstacks_params = [""]

  populations_cpus = 8
  populations_params = [""]

  multiqc_params = [""]
}
